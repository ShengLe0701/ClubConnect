<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".fragments.PageEditProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/edit_profile_iv"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:text="Change Picture" />
            <TextView
                android:id="@+id/edit_profile_curr_date_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/edit_profile_curr_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/edit_profile_curr_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/edit_profile_curr_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"
                android:text="Weekly Meetings" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_profile_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/Black" />
            </LinearLayout>
            <Button
                android:id="@+id/edit_profile_button_picker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Date and Time"
                android:background="#1975fe"
                android:textColor="@color/White" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:text="Where?" />
            <EditText
                android:id="@+id/edit_profile_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"
                android:text="What's your Org About"/>
            <Button
                android:id="@+id/edit_profile_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1975fe"
                android:textColor="@color/White"
                android:text="Change Categories" />
            <Button
                android:id="@+id/edit_profile_summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1975fe"
                android:textColor="@color/White"
                android:text="Change Summary" />
        </LinearLayout>
        <Button
            android:id="@+id/edit_profile_save_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1975fe"
            android:textColor="@color/White"
            android:text="Save Club" />
    </LinearLayout>
</ScrollView>
