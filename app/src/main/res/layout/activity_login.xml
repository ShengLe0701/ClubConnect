<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1975fe"
    tools:context=".activities.LoginAccount">

    <LinearLayout
        android:id="@+id/llLoginDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club Connect"
            android:textSize="30sp"
            android:textColor="@color/md_white_1000"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/log_in_email"
            android:theme="@style/LoginTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/White"
            android:hint="Email"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/log_in_password"
            android:theme="@style/LoginTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:hint="Password"
            android:singleLine="true"
            android:password="true"/>
        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:text="Forgot Password"/>
    </LinearLayout>
    <Button
        android:id="@+id/log_in_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/md_blue_500"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundbutton_white"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>
