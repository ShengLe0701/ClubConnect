<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popular_view_background_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/popular_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="This is the title"
            android:textColor="@color/md_white_1000"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/popular_view_image_iv"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/md_grey_500"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/popular_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="This is the date"
            android:textColor="@color/md_white_1000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/popular_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="This is the time"
            android:textColor="@color/md_white_1000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/popular_view_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="This is the location"
            android:textColor="@color/md_white_1000"
            android:textSize="24dp" />
    </LinearLayout>
</FrameLayout>
